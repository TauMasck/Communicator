        <Grid Height="210" Margin="0,32,0,-212" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD9F0F1" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image HorizontalAlignment="Left" Height="60" Margin="114,10,0,0" VerticalAlignment="Top" Width="60" OpacityMask="#FF29F5FF" Opacity="0"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Height="317" Margin="20,120,20,-383" VerticalAlignment="Top" Width="254" Background="#FFF1F1F1"/>
        
    </Grid>
        <Grid HorizontalAlignment="Center" Height="20" VerticalAlignment="Bottom" Width="292" Background="#FF367FFF"/>
    </Grid>
</Window>
