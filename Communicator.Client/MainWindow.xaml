<Window x:Class="Communicator.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="500" MinWidth="300" Height="500" Width="300"
        WindowStyle="None">
    <Grid>
        <Grid Margin="0" HorizontalAlignment="Stretch" Width="NaN" VerticalAlignment="Top">
            <Grid HorizontalAlignment="Left" Height="30" VerticalAlignment="Top"/>
            <Button x:Name="Button_WinClose" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Panel.ZIndex="1" Click="Button_WinClose_Click" BorderThickness="0" Background="White" FontFamily="Segoe WP" FontSize="16" FontWeight="Bold">

            </Button>
            <Button x:Name="Button_WinMin" Content="_" HorizontalAlignment="Right" Height="30" Margin="0,0,30,0" Panel.ZIndex="100" VerticalAlignment="Top" Width="30" BorderThickness="0" Background="White" FontSize="16" FontWeight="Bold"/>
            <Label Content="TornadoCommunicator" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Margin="37,2,0,0"/>
            <Grid Height="210" Margin="0,32,0,-212" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD9F0F1" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Image HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="230" Source="UI/avatar_bg.png" Height="76" Stretch="None"/>
                <Label Content="Loginek" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" FontSize="10" Foreground="AliceBlue"/>
            </Grid>
            <Grid HorizontalAlignment="Center" Height="317" Margin="20,120,20,-383" VerticalAlignment="Top" Width="254" Background="#FFF1F1F1"/>
            <Image HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="32" Source="UI/app_icon3232.png"/>

        </Grid>
        <Grid HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Bottom" Background="#FF367FFF">
            <Label Content="Gotowy..." HorizontalAlignment="Left" Margin="10,-3,0,0" VerticalAlignment="Top" Foreground="White" FontSize="11" Width="146"/>
            <Image HorizontalAlignment="Right" Height="12" Margin="0,4,16,0" VerticalAlignment="Top" Width="12" Source="UI/settings_1616.png"/>
        </Grid>
    </Grid>
</Window>
